<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yolo.capp.PatternLock"
    android:background="@drawable/gradient_selector"
    android:weightSum="1">

    <TextView
        android:id="@+id/text_set_pattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:src="@drawable/user_icon" />
    <Button
        android:id="@+id/button_set_pattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:background="@drawable/button_with_rounded_corner"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        />

    <com.andrognito.patternlockview.PatternLockView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pattern_lock_view"/>


</LinearLayout>
